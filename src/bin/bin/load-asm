#!/bin/sh
set -e

home="$(dirname "$0")/.."
home="$(cd "$home" && env - "PATH=$PATH" pwd)"

main="$1"
file="$2"
shift 2

obj="${file%.s}.o"
[[ -e $obj && $file -nt $obj ]] && rm -f "$obj" || :
[[ -e $obj ]] || "$home/bin/assemble" "$file"

"$home/bin/load" "$main" "$obj" "$@"
"$home/bin/strip" "$main"
