# ~/.shrc

# User-specific interactive shell initialization

alias doas='doas '
alias lc='ls -C'
alias ll='ls -Fl'
alias ls='ls -1A'

HISTFILE="$HOME/.history"
HISTSIZE=12000

if command -v hd >/dev/null
then
	:
elif command -v hexdump >/dev/null
then
	function hd {
		hexdump -e '"%08.8_ax  " 8/1 "%02X " "  " 8/1 "%02X "' -e '"  |" "%_p"' -e '"|\n"' "$@"
	}
else
	function hd {
		cat "$@" | _hd
	}
fi

function _hd {
	typeset -Uu -Z11 -i16 pos=0
	typeset -Uu -Z5 -i16 hv=2147483647
	typeset dasc dn i line
	while read -ar -n512 line
	do
		typeset -i1 "line[*]"
		i=0
		while let "i < ${#line[*]}"
		do
			dn=
			let "(hv = line[i++]) != 0" && dn=${line[i-1]#1#}
			if let "(pos & 15) == 0"
			then
				let "pos" && print -r -- "$dasc|"
				print -nr "${pos#16#}  "
				dasc=" |"
			fi
			print -nr "${hv#16#} "
			if [[ $dn = [[:print:]] ]]
			then
				dasc+=$dn
			else
				dasc+=.
			fi
			let "(pos++ & 15) == 7" && print -nr -- "- "
		done
	done
	while let "pos & 15"
	do
		print -nr "   "
		let "(pos++ & 15) == 7" && print -nr -- "- "
	done
	let "hv == 2147483647" || print -r -- "$dasc|"
}

function title {
	print -n "\033];$*\007" >/dev/tty
}

set -o physical
set -o vi

PS1='($USER@$HOSTNAME) $(date +%T) [$(h="$(cd "$HOME" && pwd)"; p="$PWD/"; case "$p" in ("$h/"*) p="~${p#"$h"}" ;; esac; p="${p%/}"; title "$HOSTNAME [$p] - '"$(basename "$SHELL")"'"; print "$p")]\nÏ„ '

trap -- "[[ -r '$HOME/.logout' ]] && . '$HOME/.logout'" EXIT
