# ~/.shrc
# User-level interactive shell configuration

case "$TERM" in
(linux|vt???)
	gui=false
	;;
(*)
	gui=true
	;;
esac

# Set up history management
HISTCONTROL=ignoredups:ignorespace
HISTFILE=~/.history
HISTSIZE=$((HISTSIZE * 100))

# Define aliases
alias doas='doas '
alias lc='ls -C'
alias ll='ls -Fl'
alias ls='ls -1A'
$gui && alias pstree='pstree -wg2' || alias pstree='pstree -w'

# Define functions
echo() {
	print -R "$@"
}
warn() {
	echo "$@" >&2
}
die() {
	e=$1
	shift
	warn "$@"
	exit "$e"
}
ppwd() {
	local h=$(cd ~ && pwd)
	local p=$PWD/
	case "$p" in
	($h/*)
		p=\~${p#$h}
		;;
	esac
	echo "${p%/}"
}

# Set shell options
set -o physical
set -o vi

# Set prompt
PS1='(\[\e[36m\]\u\[\e[m\]@\[\e[35m\]\h\[\e[m\]) \[\e[32m\]\t\[\e[m\] [\[\e[33m\]\w\[\e[m\]] {\[\e[31m\]$?\[\e[m\]}\nÏ„ '
$gui && PS1='\[\e];\h [\w] \s\a\]'$PS1

# Set other environment variables
GPG_TTY=$(tty); export GPG_TTY

# Set up exit trap
trap -- '[ -r ~/.logout ] && . ~/.logout' EXIT

# Clean up
unset gui
